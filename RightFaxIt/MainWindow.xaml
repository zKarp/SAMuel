<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RightFaxIt" x:Class="RightFaxIt.MainWindow"
        Title="RightFax It" Height="350" Width="525"
        ResizeMode="CanMinimize" AllowDrop="True" Drop="FileDrop" DragOver="FileDrag" WindowStyle="ThreeDBorderWindow">
    <Grid x:Name="LayoutRoot" AllowDrop="True" Drop="FileDrop" DragOver="FileDrag">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="292*"/>
            <ColumnDefinition Width="225*"/>
        </Grid.ColumnDefinitions>

        <Button Content="Fax" HorizontalAlignment="Left" Margin="213,274,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.493,1.55" Click="Button_Click"/>
        <ProgressBar Height="10" Margin="0,299,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <ListBox x:Name="FileListBox" HorizontalAlignment="Left" Height="196" Margin="279,61,0,0" VerticalAlignment="Top" Width="219" Grid.ColumnSpan="2" FontSize="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsEnabled="False" />
                        <TextBlock Text="{Binding Account}" Margin="2" />
                        <TextBlock Text="{Binding FaxNumber}" Margin="2" />
                        <TextBlock Text="{Binding CustomerName}" Margin="2" />
                        
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <RadioButton x:Name="ParseRadio" Content="Parse filename" HorizontalAlignment="Left" Margin="10,242,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="ManualRadio" Content="Manual" HorizontalAlignment="Left" Margin="10,262,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="OneRatio" Content="One Recipient" HorizontalAlignment="Left" Margin="10,279,0,0" VerticalAlignment="Top"/>
        <DockPanel Grid.ColumnSpan="2" Margin="0,0,0,258">
            <Menu DockPanel.Dock="Top" Margin="0,0,0,0">
                <MenuItem x:Name="MenuBar" Header="_File">
                    <MenuItem Header="_Exit" Click="MenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="_Options" Click="OptionsItem_Click"/>
                <MenuItem Header="_Help"/>
            </Menu>
            <StackPanel Margin="0,0,0,301"/>
        </DockPanel>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="92,66,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152" MaxLines="1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="92,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" MaxLines="1"/>
        <Label Content="Fax Number:" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top"/>
        <Label Content="Recipient:" HorizontalAlignment="Left" Margin="25,66,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
