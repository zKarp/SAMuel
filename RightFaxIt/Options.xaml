<Window x:Class="RightFaxIt.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Server Name:" HorizontalAlignment="Left" Margin="28,27,0,0" VerticalAlignment="Top" Width="88"/>
        <TextBox x:Name="txtServerName" HorizontalAlignment="Left" Height="23" Margin="107,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <Label Content="User ID:" HorizontalAlignment="Left" Margin="57,64,0,0" VerticalAlignment="Top" Width="50"/>
        <TextBox x:Name="txtUserID" HorizontalAlignment="Left" Height="23" Margin="107,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <Button Content="Save" HorizontalAlignment="Left" Height="40" Margin="88,221,0,0" VerticalAlignment="Top" Width="113" Click="Button_Click"/>
        <TextBox x:Name="txtUserID_Copy" HorizontalAlignment="Left" Height="23" Margin="10,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223"/>
    </Grid>
</Window>
